{
  "name": "hateblog-backend",
  "dockerComposeFile": [
    "../compose.yaml",
    "../compose.dev.yaml"
  ],
  "service": "app",
  "workspaceFolder": "/workspace",
  "remoteUser": "vscode",
  "mounts": [
    "source=${env:SSH_AUTH_SOCK},target=/ssh-agent,type=bind,consistency=cached",
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.claude,target=/home/vscode/.claude,type=bind,consistency=cached",
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.gemini,target=/home/vscode/.gemini,type=bind,consistency=cached",
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.codex,target=/home/vscode/.codex,type=bind,consistency=cached",
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.vscode-server,target=/home/vscode/.vscode-server,type=bind,consistency=cached"
  ],
  "remoteEnv": {
    "SSH_AUTH_SOCK": "/ssh-agent"
  },
  "runServices": [
    "postgres",
    "redis"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "golang.go",
        "ms-azuretools.vscode-docker",
        "eamodio.gitlens",
        "editorconfig.editorconfig",
        "redhat.vscode-yaml",
        "ms-vscode.makefile-tools",
        "Anthropic.claude-code",
        "openai.chatgpt",
        "google.gemini-cli-vscode-ide-companion"
      ],
      "settings": {
        "go.toolsManagement.checkForUpdates": "local",
        "go.useLanguageServer": true,
        "go.lintTool": "golangci-lint",
        "go.lintOnSave": "package",
        "go.formatTool": "goimports",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": "explicit"
        },
        "go.testFlags": [
          "-v",
          "-race"
        ],
        "[go]": {
          "editor.defaultFormatter": "golang.go",
          "editor.tabSize": 4,
          "editor.insertSpaces": false
        },
        "files.eol": "\n",
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true,
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },
  "postCreateCommand": "go mod download && make dev",
  "waitFor": "postCreateCommand"
}